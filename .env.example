# Base de Datos
MONGODB_URI=tu_mongodb_uri_aqui

# Autenticación NextAuth
NEXTAUTH_SECRET=tu_secret_key_aqui
NEXTAUTH_URL=http://localhost:3000

# Google Generative AI (Gemini)
# Obtén tu API key en: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=tu_google_api_key_aqui

# Qdrant Vector Database
# URL del servidor Qdrant (puerto 6333 por defecto, pero tu Docker usa 8080)
QDRANT_URL=http://localhost:8080

# LangChain (Opcional - para tracing y debugging)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=tu_langchain_api_key_aqui
# LANGCHAIN_PROJECT=qa-agent

# Servidores MCP (Model Context Protocol)
# URLs de los servidores MCP que ya están corriendo
# Nota: Incluye el endpoint completo (/sse o /mcp)
PLAYWRIGHT_MCP_URL=http://localhost:3001/sse
# CONTEXT7_MCP_URL=http://localhost:3002/sse
# CUSTOM_MCP_URL=http://localhost:3003/sse

# Configuración de Desarrollo
NODE_ENV=development
